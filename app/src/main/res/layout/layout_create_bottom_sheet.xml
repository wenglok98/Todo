<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background">

    <RelativeLayout
        android:id="@+id/create_Sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/create_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Create New To-do"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/create_edt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/create_tv"
            android:layout_margin="15dp"
            android:background="@drawable/edt_bg"
            android:gravity="top|left"
            android:hint="Enter Text Here"
            android:padding="10dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_edt"
            android:layout_alignParentRight="true"
            app:cornerRadius="15dp"
            android:textColor="@color/black"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/teal_200"
            android:id="@+id/save_bt_create_bottom_sheet"
            android:layout_margin="15dp"
            android:text="Save" />
    </RelativeLayout>
</ScrollView>