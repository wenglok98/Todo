<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox_cb"
        android:layout_width="50dp"

        android:layout_height="50dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/todo_Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@id/checkbox_cb"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/user_id_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todo_Edt"
        android:layout_alignLeft="@id/todo_Edt"
        android:layout_alignRight="@id/todo_Edt"
        android:layout_marginBottom="6dp" />


</RelativeLayout>